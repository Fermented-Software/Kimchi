<h1>New user</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "erro") %> stops user from being persisted to the database:</h2>
 
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with scope: :user, url: users_path, local: true do |form| %>
  <p>
    <%= form.label :username %><br>
    <%= form.text_field :username %>
  </p>
 
  <p>
    <%= form.label :password %><br>
    <%= form.text_field :password %>
  </p>

  <p>
    <%= form.label :aws_key_id %><br>
    <%= form.text_field :aws_key %>
  </p>

  <p>
    <%= form.label :aws_key_secret %><br>
    <%= form.text_field :aws_key_secret %>
  </p>

  <p>
    <%= form.submit 'Sign-up' %>
  </p>
<% end %>